<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - OptoAssist</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark" style="z-index:10">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">OptoAssist</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        @* <li class="nav-item">
                            <a href="~/Home/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li> *@
                        <li>
                            <a href="~/Questions/AskQuestions" class="nav-link px-0 align-middle navelement">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">History Taking for Adults</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/Questions/AskQuestionschild" class="nav-link px-0 align-middle navelement">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">History Taking for Children</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/Questions/QuizGame" class="nav-link px-0 align-middle navelement">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Improve Your History-taking Skills</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle navelement">
                                <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">View Questions</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="~/Questions/AddQuestions" class="nav-link px-0 navelement"> <span class="d-none d-sm-inline">Add Questions</span></a>
                                </li>
                                <li>
                                    <a href="~/Questions/DeleteQuestions" class="nav-link px-0 navelement"> <span class="d-none d-sm-inline">Delete Questions for Adult</span></a>
                                </li>
                                <li>
                                    <a href="~/Questions/DeleteQuestionschild" class="nav-link px-0 navelement"> <span class="d-none d-sm-inline">Delete Questions for Children</span></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="container" style="padding:0 0 0 0;;">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Asst - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
